import random
dice_range = range(2, 12)
print('Приветствуем Вас в ввирутальном казино "OzonSkills". На Ваш депозитный счет зачислино 10000')
list = []
i = 1
deposit = 10000
while deposit > 0:

    if deposit <= 0:
        Print ('У тебя не хватает средст на счету. Прощайте')
    rnd_dice = random.randint(2, 12)
    user_value = int(input('Угадайте числа на выпавших кубиках. Попытка №' +str(i) + ':'))
    list.append(user_value)
    list.append(rnd_dice)
    list.append(deposit)
    i+=1
    if user_value < 2 or user_value > 12:
        print('Не корретные значения. На 2х кубиках не может быть меньше 2 и больше 12')
        break

    if user_value == rnd_dice:
        deposit += 1000
        print('Невероятно! Ты угадал число {}!'.format(rnd_dice), 'Твой депозитный счет составляет', deposit)

    else:
        print('На кубиках выпало {}.'.format(rnd_dice), 'А Вы поставили на {}. Давай еще попытку!'.format(user_value))
        deposit-=1000
        print('На твоем счету осталось', deposit)

print('Не расстраивайтесь. Приходите еще.')
print(list)
